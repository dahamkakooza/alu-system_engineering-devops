#!/usr/bin/env bash
# This script installs Nginx, creates a custom 404 page, and configures Nginx to use it.

# Update the package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create the custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Configure Nginx to use the custom 404 page
sudo sed -i '/server_name/a \\n    # Custom 404 error page\n    error_page 404 /404.html;\n    location = /404.html {\n        internal;\n    }\n' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo service nginx restart

