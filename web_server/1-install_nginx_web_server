#!/usr/bin/env bash
# This script installs Nginx, configures it to serve a custom index page on port 80, and restarts the service.

# Update the package list
sudo apt-get update -y

# Install Nginx
sudo apt-get install nginx -y

# Create a custom index.html in the default Nginx directory
echo "Holberton School" | sudo tee /var/www/html/index.html

# Restart Nginx without using systemctl to apply the changes
sudo service nginx restart
